{extends '..//@backend.latte'}

{block content}
{form filterForm}
    {control filterForm errors}
    <div class="p-1 place-text-center mx-96">
        <p class="place-text-center font-medium text-lg text-slate-500 my-1 mx-4">Filter</p>
        </div>
    <div class=" place-content-center p-5 mx-96">
        <div>
            <input n:name="subject_name" class="font-medium text-slate-300 bg-slate-700 rounded-md px-4 py-1" placeholder="Predmet">
        </div>
    </div>
    <div class=" place-content-center p-5 mx-96">
        {input ok 'class' => 'hover:bg-blue-400 text-slate-300 bg-slate-700 rounded-md px-6 py-2"'}
    {input cancel 'class' => 'hover:bg-blue-400 text-slate-300 bg-slate-700 rounded-md px-6 py-2"'}
    </div>
{/form}
<table class="table-auto block text-slate-300 w-full justify-center p-5 mx-96 my-2">
    <thead class="bg-slate-700 font-medium">
    <tr>
        <th class="p-2">Predmet</th>
        <th class="p-2"></th>
        <th class="p-2"><a class="btn bg-green-500 hover:bg-blue-400 rounded p-2 font-medium" href="add">Add</a></th>
    </tr>

    </thead>
    <tbody class="bg-slate-800">
    {foreach $subjects as $subject}
        <tr>
            <td class="p-2">{$subject->subject_name}</td>

            <td class="p-2"><a class="hover:bg-blue-400 font-medium btn bg-green-500 hover:bg-blue-400 rounded p-2" n:href="edit $subject->subject_id">Edit</a></td>
            <td class="p-2"><a class="hover:bg-blue-400 font-medium bg-red-500 hover:bg-blue-400 rounded p-2" n:href="Delete! $subject->subject_id">Delete</a></td>
        </tr>
    {/foreach}
    </tbody>
</table>